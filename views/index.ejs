<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head.ejs', { title: 'Cats' }) %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row pt-3">
        <div class="col-3">
          <h3>Select continent</h3>

          <br />
          <div id="handle-region">
            <% regions.forEach(function(region) {%>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="continent" id="continent-<%= region %>" value="<%= region %>" <%= region === currentRegion ? 'checked' : '' %>>
              <label class="form-check-label" for="continent-<%= region %>">
                <%= region %>
              </label>
            </div>
            <% }) %>
          </div>
        </div>

        <div class="col-9">
          <h3>Info</h3>
          <br />

          <div class="content-info">
            <select class="custom-select" id="handle-country">
              <option selected>Choose the country</option>
              <% countries.forEach(function(country) {%>
              <option value="<%= country.country_code %>" <%= country.country_code === currentCountryCode ? 'selected' : '' %>>
                <%= country.origin %>
              </option>
              <% }) %>
            </select>
          </div>

          <br>

          <div class="row">
          <% breeds.forEach(function(breed) {%>
            <div class="col col-6">
            <div class="card mb-3">
              <img src="<%= breed.image %>" class="card-img-top" alt="<%= breed.name %>">
              <div class="card-body">
                <h5 class="card-title"><strong>Name:</strong> <%= breed.name %></h5>
                <p class="card-text"><strong>Country:</strong> <img src="<%= breed.flag %>" width="20px" alt=""> <%= breed.origin %></p>
              </div>
            </div>
            </div>
          <% }) %>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
